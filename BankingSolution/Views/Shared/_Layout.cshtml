<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Banking Solution">
    <meta name="author" content="Gabriel Gauci Maistre">
    <title>@ViewBag.Title - DSA Bank</title>
    
    <!-- Banking Solution core css-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DSA Bank", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    @if (!Context.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Log in", "Login", "Users")</li>
                    }
                    else if (Context.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Sign out", "SignOut", "Users")</li>
                    }
                </ul>
                <input type="hidden" id="hiddenUsername" value="@Context.User.Identity.Name" />
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3">
                <div id="MainMenu" class="list-group">
                    <div class="list-group panel">
                        <a href="#BankAccount" class="list-group-item" data-toggle="collapse" data-parent="#MainMenu">Bank Account</a>
                        <div class="collapse" id="BankAccount">
                            <a id="BankAccountView" class="list-group-item" href="/BankAccounts/">View your bank accounts</a>
                            <a id="BankAccountCreate" class="list-group-item" href="/BankAccounts/Create">Create a bank account</a>
                            <a id="BankAccountTransfer" class="list-group-item" href="/BankAccounts/Transfer">Make a transfer</a>
                            <a id="BankAccountCreate" class="list-group-item" href="/BankAccounts/Transactions">View your transactions</a>
                        </div>
                    </div>
                </div>
            </div> <!-- col-md-3 -->
            <div class="col-md-9">
                @RenderBody()
            </div> <!-- col-md-9 -->
        </div> <!-- row -->
    </div> <!-- container -->

    <!-- Footer -->
    <div class="container">
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; 2015-2016 <a href="http://www.gabriel.gaucimaistre.com">Gabriel Gauci Maistre</a></p>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    
    <!-- Bootstrap core Javascript-->
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- jQuery Validation -->
    <script src="~/Scripts/jquery.validate.js"></script>
    
    <!-- jQuery Unobtrusive Validation -->
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- Modernizr core Javascript-->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    
    <!-- Extra scripts to load from views-->
    @RenderSection("Footer", required: false)
</body>
</html>